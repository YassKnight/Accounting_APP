<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <ImageView
        android:id="@+id/list_icon"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="20dp"
        android:src="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/list_item_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="19dp"
        android:layout_marginTop="19dp"
        android:layout_toRightOf="@id/list_icon"
        android:text="测试"
        android:textColor="@android:color/black"
        android:textSize="18dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/list_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/list_item_type"
        android:layout_marginLeft="19dp"
        android:layout_toRightOf="@id/list_icon"
        android:text="09:10" />

    <TextView
        android:id="@+id/list_recordamount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="30dp"
        android:layout_marginTop="25dp"
        android:text="55"
        android:textSize="20dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/list_recordtype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_toLeftOf="@id/list_recordamount"
        android:text="-"
        android:textSize="20dp" />

</RelativeLayout>
